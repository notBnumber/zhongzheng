}
.hotContent .hotContentItem .name {
  font-size: 34rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: #292929;
  margin-top: 23rpx;
}
.hotContent .hotContentItem .address {
  margin-top: 20rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #a4a4a4;
}
.hotContent .biaoqianList {
