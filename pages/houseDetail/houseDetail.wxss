  border-radius: 2rpx;
  font-size: 20rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #3cc7a2;
  margin-right: 20rpx;
}
.hotContent .biaoqianList .state1 {
  width: 94rpx;
  height: 26rpx;
  background: #e8eefe;
  border-radius: 2rpx;
  font-size: 20rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #9bb6fb;
}
.hotContent .biaoqianList .state2 {
  width: 94rpx;
  height: 26rpx;
  background: #ffece8;
  border-radius: 2rpx;
  font-size: 20rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #ff8c71;
}
.hotContent .price {
  font-size: 32rpx;
  font-family: PingFang-SC-Regular;
  font-weight: bold;
  color: #ff4c6f;
  margin-top: 15rpx;
}
.hotContent .yongjin {
  margin-top: 27rpx;
  display: flex;
  align-items: center;
}
.hotContent .yongjin .yongjinLeft {
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: bold;
  color: #656565;
