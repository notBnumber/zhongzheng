.container-ban {
  height: 100vh;
  overflow: hidden;
}
.swiper {
  width: 100%;
  height: 380rpx;
}
.swiper .ind {
  width: 106rpx;
  height: 44rpx;
  position: absolute;
  right: 14rpx;
  bottom: 10rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #ffffff;
  background: #000000;
  opacity: 0.42;
  border-radius: 10rpx;
}
.tab {
  width: 100%;
  display: flex;
  height: 93rpx;
  box-shadow: 0rpx 4rpx 6rpx 0rpx rgba(113, 138, 131, 0.06);
}
.tab .item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 18rpx;
  padding-bottom: 18rpx;
}
.tab .item .itemP {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 2rpx solid #C2C2C2;
}
.tab .item .itemP .itemName {
  font-size: 30rpx;
  font-family: PingFang-SC-Regular;
  font-weight: bold;
  color: #202020;
}
.tab .item .itemP image {
  width: 22rpx;
  height: 17rpx;
  margin-left: 9rpx;
}
.tab .item:last-child .itemP {
  border: none;
}
