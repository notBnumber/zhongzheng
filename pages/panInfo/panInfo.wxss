.container {
  padding: 27rpx 20rpx;
  width: 100%;
}
.content {
  width: 100%;
}
.content .input-placeholder {
  font-size: 30rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #b0b0b0;
}
.content input {
  font-size: 30rpx;
  padding-left: 24rpx;
  height: 88rpx;
  background: #ffffff;
  border: 1rpx solid #e4e4e4;
  border-radius: 10rpx;
  margin-bottom: 21rpx;
}
.types {
  margin-top: 45rpx;
}
.types .typesTitle {
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #626262;
}
.types .typesContent {
  margin-top: 26rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.types .typesContent .typesContentItem {
  width: 141rpx;
  height: 53rpx;
  border: 1rpx solid #c3c3c3;
  border-radius: 10rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #626262;
  margin-right: 27rpx;
}
.types .typesContent .last {
  width: 180rpx;
}
.types .typesContent .active {
  background-color: #39C6A1;
  color: #FFFFFF;
}
.types .typesContent input {
  padding-left: 14rpx;
  flex: 1;
  height: 53rpx;
  border: 1rpx solid #c3c3c3;
  border-radius: 10rpx;
  font-size: 26rpx;
}
.types .typesContent .input-placeholder {
  width: 241rpx;
  height: 25rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #b3b3b3;
}
.inp {
  margin-top: 45rpx;
  padding-left: 24rpx;
  width: 100%;
  height: 88rpx;
  background: #ffffff;
  border: 1rpx solid #e4e4e4;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.input-placeholders {
  font-size: 30rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #b0b0b0;
}
.imgUrl {
  margin-top: 69rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.imgUrl .imgUrlItem {
  position: relative;
  width: 148rpx;
  height: 148rpx;
  margin-right: 16rpx;
  margin-bottom: 15rpx;
}
.imgUrl .imgUrlItem image {
  width: 100%;
  height: 100%;
}
.imgUrl .imgUrlItem .del {
  position: absolute;
  right: 0;
  top: 0;
}
.imgUrl .imgUrlItem .del image {
  width: 39rpx;
  height: 39rpx;
}
.imgUrl .add {
  width: 148rpx;
  height: 148rpx;
  position: relative;
  margin-right: 16rpx;
  margin-bottom: 15rpx;
}
.imgUrl .add image {
  width: 100%;
  height: 100%;
}
.imgUrl .add view {
  position: absolute;
  width: 100%;
  bottom: 23rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #a8a8a8;
}
.btn {
  margin: 83rpx auto;
  width: 626rpx;
  height: 84rpx;
  background: linear-gradient(-90deg, #38c6a0 0%, #6de0c3 100%);
  border-radius: 42rpx;
  font-size: 36rpx;
  font-family: PingFang-SC-Regular;
  font-weight: bold;
  color: #ffffff;
}
