page {
  position: relative;
  height: 100%;
}
.identity {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #F7F8F8;
}
.identity .authen {
  margin-top: 71rpx;
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #ffffff;
  border-radius: 10rpx;
}
.identity .authen .inputCode {
  text-align: left;
  width: calc(70%);
  height: 90rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 28rpx;
}
.identity .authen .getCode {
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: bold;
  color: #01bc8a;
}
.identity .outer {
  margin-top: 895rpx;
  display: flex;
  justify-content: center;
}
.identity .outer .nextStep {
  width: 626rpx;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  background: linear-gradient(-90deg, #38c6a0 0%, #6de0c3 100%);
  border-radius: 42rpx;
  font-size: 36rpx;
}
